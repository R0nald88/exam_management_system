<BorderPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp3111.examsystem.controller.StudentStartExamController">
   <top>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
            style="-fx-background-repeat: stretch;-fx-background-position: center center;" minHeight="-Infinity"
            minWidth="-Infinity" >
         <children>
            <Label fx:id="quizNameLbl">
               <VBox.margin>
                  <Insets top="100.0"/>
               </VBox.margin>
               <font>
                  <Font size="24.0"/>
               </font>
            </Label>

            <Label fx:id="totalQuestionLbl" text="Total Question:" />

            <Label fx:id="remainTimeLbl" text="Remain Time:" />


         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="71.0" prefWidth="960.0" BorderPane.alignment="CENTER">
         <children>
             <Button mnemonicParsing="false" onAction="#previous" text="Previous">
                 <HBox.margin>
                     <Insets right="20.0" />
                 </HBox.margin>
             </Button>
             <Button mnemonicParsing="false" onAction="#next" text="Next">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
             <Button mnemonicParsing="false" onAction="#submit" text="submit">
                 <HBox.margin>
                     <Insets right="20.0" />
                 </HBox.margin>
             </Button>
         </children>
      </HBox>
   </bottom>
   <left>
       <VBox prefHeight="379.0" prefWidth="460.0" BorderPane.alignment="CENTER">
           <TableView fx:id="questionTable" prefHeight="312.0" prefWidth="460.0">
               <columns>
                   <TableColumn fx:id="questionColumn" prefWidth="75.0"/>
               </columns>
           </TableView>
       </VBox>
   </left>
   <right>
       <VBox prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER">

       </VBox>
   </right>
</BorderPane>
